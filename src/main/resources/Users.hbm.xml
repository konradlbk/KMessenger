<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="pl.szulc.konrad.app.users">

    <class name="User" table="users" >
        <id name="id" column="id" access="field">

            <generator class="identity"/>
        </id>


        <property name="login" type="string" access="field" column="login"/>
        <property name="password" type="string" access="field" column="password"/>
        <property name="name" type="string" access="field" column="name"/>
    </class>
</hibernate-mapping>